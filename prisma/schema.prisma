generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id           String   @id @default(cuid())
  name         String
  phone        String
  mrn          String?
  city         String?
  dischargedAt DateTime?
  calls        Call[]
  createdAt    DateTime @default(now())
}

model Call {
  id                String      @id @default(cuid())
  patientId         String
  patient           Patient     @relation(fields: [patientId], references: [id])
  telephonyProvider String
  telephonyCallId   String?
  startedAt         DateTime?
  endedAt           DateTime?
  durationSeconds   Int?
  recordingUrl      String?
  status            String
  createdAt         DateTime     @default(now())
  transcripts       Transcript[]
  transcript       String?
   googleLanguage     String?
  transcriptStatus String @default("pending")
  costItems         CostItem[]
}

model Transcript {
  id         String   @id @default(cuid())
  callId     String
  call       Call     @relation(fields: [callId], references: [id])
  provider   String
  language   String?
  text       String   @db.Text
  confidence Float?
  createdAt  DateTime @default(now())
}

model CostItem {
  id        String  @id @default(cuid())
  callId    String
  call      Call    @relation(fields: [callId], references: [id])
  category  String
  provider  String
  units     Float
  unitCost  Float
  totalCost Float
  createdAt DateTime @default(now())
}

model Settings {
  id               String   @id @default(cuid())
  voiceGender      String   @default("male")    // 'male' | 'female'
  sttProvider      String   @default("deepgram")// deepgram | whisper | azure | google
  ttsProvider      String   @default("plivo")   // plivo | elevenlabs | azure | google
  eleven_male_voice String?  // optional: store provider-specific voice IDs
  azureVoiceName   String?
  eleven_female_voice String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
